<%= form_for @participant do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :gender %> <br />
    <%= f.label :gender_male, 'male' %>
    <%= f.radio_button :gender, 'male' %>
    <%= f.label :gender_female, 'female' %>
    <%= f.radio_button :gender, 'female' %><br />
  </p>

  <p>
    <%= f.label :birthday %><br>
    <%= f.text_area :birthday %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>