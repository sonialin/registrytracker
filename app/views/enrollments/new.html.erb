<h1>New Enrollment</h1>

<%= form_for(@enrollment, :url => registry_enrollments_path(@registry)) do |f| %>
  <p>
    <%= f.label :date_of_enrollment %><br>
    <%= f.text_field :date_of_enrollment %>
  </p>
 
  <p>
    <%= f.label :contact %><br>
    <%= f.text_area :contact %>
  </p>

  <p>
    <%= f.label :remarks %><br>
    <%= f.text_area :remarks %>
  </p>

  <p>
    <%= f.label :participant_id %><br>
    <%= f.text_area :participant_id %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>